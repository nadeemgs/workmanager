<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/measurement_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_4dp"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:cardCornerRadius="@dimen/default_4dp"
>
    
    <RelativeLayout
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:background = "@color/BackgroundColor"
            android:id = "@+id/relativeLayout" app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent" app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintBottom_toBottomOf = "parent">
        <TextView
                android:id = "@+id/measuremtn_id"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_margin = "@dimen/default_8dp"
                android:text = "@string/measurement_text"
                android:textSize = "@dimen/text_name_size"
                android:drawableStart = "@drawable/bullet"
                android:drawableLeft = "@drawable/bullet"
                android:drawableTint = "@color/colorBulletIcon"

                android:textStyle = "bold"
                android:gravity = "center_vertical"
        />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

