<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
                                             xmlns:app = "http://schemas.android.com/apk/res-auto" xmlns:tools = "http://schemas.android.com/tools" android:layout_width = "match_parent"
                                             android:layout_height = "match_parent"
                                             android:background="@color/BackgroundColor"
                                             android:id = "@+id/linearLayout5"
                                             android:fitsSystemWindows="true">
    <ScrollView
            android:layout_width = "181dp"
            android:layout_height = "264dp"
            android:id = "@+id/scrollview_measurement"
            android:scrollbars = "none"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintHorizontal_bias = "0.68" app:layout_constraintVertical_bias = "0.13999999">
        <LinearLayout
                xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:tools = "http://schemas.android.com/tools"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:orientation = "vertical"
                tools:context = "com.company.applicationname.app.ui.list.MeasurementActivity"
                tools:showIn = "@layout/activity_measurement">
    
            <androidx.recyclerview.widget.RecyclerView
                    android:id = "@+id/recyclerview"
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    tools:listitem = "@layout/recyclerview_item"
            />

        </LinearLayout>
    </ScrollView>
    <EditText
            android:layout_width = "152dp"
            android:layout_height = "152dp"
            android:inputType = "number"
            android:hint="1"
            android:textColor = "@color/colorOkButton"
            android:ems = "10"
            android:gravity = "center"
            android:background = "@drawable/measurement_numberinput"
            android:id = "@+id/edittext_measurement"
            android:textSize = "65sp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintHorizontal_bias = "0.056" app:layout_constraintVertical_bias = "0.497" />
    <Button
            android:text = "@string/measurement_okbutton"
            app:fontFamily = "Tw Cen MT"
            android:textColor = "@color/BackgroundColor"
            android:layout_width = "wrap_content"
            android:layout_height = "46dp"
            android:ems = "38"
            android:background = "@drawable/measurement_okbutton"
            android:id = "@+id/button_measurement"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintHorizontal_bias = "0.498" app:layout_constraintVertical_bias = "0.945" />
    <TextView
            android:text = "Rock salt"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:gravity = "center_vertical|center_horizontal"
            android:id = "@+id/textview_measurement"
            android:textStyle = "bold"
            android:textSize = "30sp"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintRight_toRightOf = "parent"
            app:layout_constraintLeft_toLeftOf = "parent"
            app:layout_constraintHorizontal_bias = "0.053" app:layout_constraintVertical_bias = "0.09" />

</androidx.constraintlayout.widget.ConstraintLayout>