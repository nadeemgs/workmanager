<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        xmlns:app = "http://schemas.android.com/apk/res-auto"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:background="@color/BackgroundColor"
        android:fitsSystemWindows="true"
        tools:context = ".ui.Authentication.LoginActivity">
    <ImageView
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            app:srcCompat = "@drawable/close"
            android:id = "@+id/imageview_registration_close"
            android:contentDescription="@string/login_closeloginpage"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintHorizontal_bias = "0.024" app:layout_constraintVertical_bias = "0.045" />
    
    <ImageView
            android:layout_width = "208dp"
            android:layout_height = "86dp"
            app:srcCompat = "@drawable/logo_1"
            android:contentDescription = "@string/login_logo"
            android:id = "@+id/imageview_registration_logo"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintHorizontal_bias = "0.101" app:layout_constraintVertical_bias = "0.196" />
    <!---->
    <EditText
            android:layout_width = "wrap_content"
            android:layout_height = "40dp"
            android:inputType = "textEmailAddress"
            android:ems = "12"
            android:hint = "@string/login_emailhint"
            android:gravity = "center"
            android:background = "@drawable/login_inputs"
            android:id = "@+id/edittext_registration_email"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintBottom_toBottomOf = "@id/textview_registration_button"
            app:layout_constraintHorizontal_bias = "0.941" app:layout_constraintVertical_bias = "0.45" />
    <TextView
            android:layout_width = "wrap_content"
            android:layout_height = "43dp"
            android:ems = "12"
            android:textSize = "18sp"
            android:text = "@string/registration_registerhint"
            android:gravity = "center"
            android:textColor = "@color/BackgroundColor"
            android:background = "@drawable/login_button"
            android:id = "@+id/textview_registration_button"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "@id/edittext_registration_email"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintHorizontal_bias = "0.941" app:layout_constraintVertical_bias = "0.16" />

    <TextView
            android:id="@+id/textview_registration_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/all_cancel"
            android:textColor="@color/CommentViewTextColor"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.798"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.418" />
    <TextView
            android:text = "@string/login_facebooktext"
            android:layout_width = "wrap_content"
            android:layout_height = "39dp"
            android:gravity = "center"
            android:drawableLeft = "@drawable/facebook"
            android:textColor = "@color/colorFB"
            android:textSize = "18sp"
            android:id = "@+id/textview_registration_facebooktext"
            app:layout_constraintStart_toStartOf = "parent"
            app:layout_constraintEnd_toEndOf = "parent"
            app:layout_constraintTop_toTopOf = "parent"
            app:layout_constraintBottom_toBottomOf = "parent"
            app:layout_constraintVertical_bias = "0.821" />


</androidx.constraintlayout.widget.ConstraintLayout>